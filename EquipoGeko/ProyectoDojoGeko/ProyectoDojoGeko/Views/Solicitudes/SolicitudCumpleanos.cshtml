@model ProyectoDojoGeko.Models.SolicitudViewModel

@{
    ViewData["Title"] = "Solicitud por Cumplea√±os";
    
    var codigoSistema = Context.Session.GetString("SistemaActual");
    Layout = (!string.IsNullOrEmpty(codigoSistema)) ?
        "~/Views/Shared/_DashboardLayoutSistema.cshtml" :
        "~/Views/Shared/_DashboardLayout.cshtml";
}

<style>
    :root {
        --primary-color: #003C9D;
        --cumpleanos-color: #FF6B9D;
        --cumpleanos-dark: #C44569;
        --secondary-color: #6c757d;
        --success-color: #28a745;
        --light-bg: #f8f9fa;
        --soft-gray: #e9ecef;
        --text-color: #343a40;
    }

    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #fdfdfd;
    }

    .cumpleanos-container {
        padding: 30px;
        max-width: 1400px;
        margin: 0 auto;
    }

    .cumpleanos-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 25px;
        padding-bottom: 15px;
        border-bottom: 2px solid var(--soft-gray);
    }

    .cumpleanos-title {
        font-size: 28px;
        font-weight: 600;
        background: linear-gradient(135deg, var(--cumpleanos-color), var(--cumpleanos-dark));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .cumpleanos-title i {
        -webkit-text-fill-color: var(--cumpleanos-color);
        font-size: 32px;
    }

    .text-muted {
        color: #6c757d;
        font-size: 15px;
    }

    .cumpleanos-actions {
        display: flex;
        gap: 12px;
        flex-wrap: wrap;
        align-items: center;
    }

    .pdf-viewer {
        width: 100%;
        height: 800px;
        border: 2px solid var(--soft-gray);
        border-radius: 12px;
        margin-bottom: 20px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    }

    .info-alert {
        background: linear-gradient(135deg, #FFF0F5, #FFE4EC);
        border-left: 4px solid var(--cumpleanos-color);
        padding: 16px 20px;
        border-radius: 8px;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .info-alert i {
        color: var(--cumpleanos-color);
        font-size: 24px;
    }

    .info-alert-content {
        flex: 1;
    }

    .info-alert-title {
        font-weight: 600;
        color: var(--cumpleanos-dark);
        margin-bottom: 4px;
    }

    .info-alert-text {
        color: #6c757d;
        margin: 0;
    }

    .btn-enviar {
        background: linear-gradient(135deg, var(--cumpleanos-color), var(--cumpleanos-dark));
        color: white;
        padding: 14px 32px;
        border: none;
        border-radius: 12px;
        font-weight: 600;
        font-size: 16px;
        cursor: pointer;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        box-shadow: 0 4px 12px rgba(255, 107, 157, 0.3);
    }

    .btn-enviar:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 16px rgba(255, 107, 157, 0.4);
    }

    .btn-volver {
        background: var(--secondary-color);
        color: white;
        padding: 14px 32px;
        border: none;
        border-radius: 12px;
        font-weight: 600;
        font-size: 16px;
        cursor: pointer;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        text-decoration: none;
    }

    .btn-volver:hover {
        background: #5a6268;
        transform: translateY(-2px);
        color: white;
    }

    .loading-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        display: none;
        justify-content: center;
        align-items: center;
        z-index: 9999;
    }

    .loading-spinner {
        background: white;
        padding: 30px;
        border-radius: 12px;
        text-align: center;
    }

    .spinner-border {
        width: 3rem;
        height: 3rem;
        border-width: 0.3em;
        color: var(--cumpleanos-color);
    }
</style>

<div class="cumpleanos-container">
    <!-- Header -->
    <div class="cumpleanos-header">
        <div>
            <h1 class="cumpleanos-title">
                <i class="fas fa-birthday-cake"></i>
                Solicitud por Cumplea√±os
            </h1>
            <p class="text-muted">Revisa tu solicitud antes de enviarla al autorizador</p>
        </div>
        <div class="cumpleanos-actions">
            <a href="@Url.Action("Index", "Solicitudes")" class="btn-volver">
                <i class="fas fa-arrow-left"></i>
                Volver
            </a>
        </div>
    </div>

    <!-- Alerta informativa -->
    <div class="info-alert">
        <i class="fas fa-gift"></i>
        <div class="info-alert-content">
            <div class="info-alert-title">D√≠a de Cumplea√±os</div>
            <p class="info-alert-text">
                Esta solicitud corresponde a tu d√≠a de disponibilidad por cumplea√±os. 
                No se descontar√°n d√≠as de tus vacaciones acumuladas.
            </p>
        </div>
    </div>

    <!-- Visor de PDF -->
    <iframe class="pdf-viewer" 
            src="@Url.Action("GenerarPDFCumpleanos", "Solicitudes", new { 
                idSolicitud = ViewBag.IdSolicitud
            })" 
            type="application/pdf">
    </iframe>

    <!-- Bot√≥n de env√≠o -->
    <div style="text-align: center;">
        <form id="formEnviar" asp-action="EnviarSolicitudCumpleanos" asp-controller="Solicitudes" method="post">
            <input type="hidden" name="idSolicitud" value="@ViewBag.IdSolicitud" />
            <input type="hidden" name="idAutorizador" value="@ViewBag.IdAutorizador" />
            
            <button type="submit" class="btn-enviar">
                <i class="fas fa-paper-plane"></i>
                Enviar Solicitud
            </button>
        </form>
    </div>
</div>

<!-- Loading Overlay -->
<div class="loading-overlay" id="loadingOverlay">
    <div class="loading-spinner">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Cargando...</span>
        </div>
        <p class="mt-3">Enviando solicitud...</p>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.getElementById('formEnviar').addEventListener('submit', function(e) {
            e.preventDefault(); // Prevenir env√≠o inmediato
            
            // Mostrar confirmaci√≥n antes de enviar
            Swal.fire({
                title: 'üéÇ ¬øEnviar solicitud de cumplea√±os?',
                html: 'Tu solicitud ser√° enviada al autorizador para su aprobaci√≥n.<br><strong>No se descontar√°n d√≠as de vacaciones.</strong>',
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#FF6B9D',
                cancelButtonColor: '#6c757d',
                confirmButtonText: '<i class="fas fa-paper-plane"></i> S√≠, enviar',
                cancelButtonText: '<i class="fas fa-times"></i> Cancelar',
                customClass: {
                    popup: 'swal-birthday-popup',
                    title: 'swal-birthday-title',
                    confirmButton: 'swal-birthday-btn',
                    cancelButton: 'swal-cancel-btn'
                }
            }).then((result) => {
                if (result.isConfirmed) {
                    // Mostrar loading
                    document.getElementById('loadingOverlay').style.display = 'flex';
                    
                    // Enviar formulario
                    this.submit();
                }
            });
        });

        // Mostrar mensaje de √©xito si viene de TempData
        @if (TempData["SuccessMessage"] != null)
        {
            <text>
            Swal.fire({
                title: '¬°√âxito!',
                html: '@Html.Raw(TempData["SuccessMessage"])',
                icon: 'success',
                confirmButtonColor: '#FF6B9D',
                confirmButtonText: 'Entendido',
                customClass: {
                    popup: 'swal-birthday-popup',
                    title: 'swal-birthday-title',
                    confirmButton: 'swal-birthday-btn'
                }
            }).then(() => {
                window.location.href = '@Url.Action("Index", "Solicitudes")';
            });
            </text>
        }

        // Mostrar mensaje de error si viene de TempData
        @if (TempData["ErrorMessage"] != null)
        {
            <text>
            Swal.fire({
                title: 'Error',
                text: '@TempData["ErrorMessage"]',
                icon: 'error',
                confirmButtonColor: '#dc3545',
                confirmButtonText: 'Entendido'
            });
            </text>
        }
    </script>
    
    <style>
        .swal-birthday-popup {
            border-radius: 1rem;
            padding: 2rem;
        }
        
        .swal-birthday-title {
            color: #FF6B9D;
            font-weight: 700;
        }
        
        .swal-birthday-btn {
            background: linear-gradient(135deg, #FF6B9D, #C44569) !important;
            border: none !important;
            padding: 0.75rem 2rem !important;
            border-radius: 0.5rem !important;
            font-weight: 600 !important;
            box-shadow: 0 4px 12px rgba(255, 107, 157, 0.3) !important;
        }
        
        .swal-birthday-btn:hover {
            background: linear-gradient(135deg, #C44569, #FF6B9D) !important;
            box-shadow: 0 6px 16px rgba(255, 107, 157, 0.4) !important;
        }
        
        .swal-cancel-btn {
            background: #6c757d !important;
            border: none !important;
            padding: 0.75rem 2rem !important;
            border-radius: 0.5rem !important;
            font-weight: 600 !important;
        }
    </style>
}
