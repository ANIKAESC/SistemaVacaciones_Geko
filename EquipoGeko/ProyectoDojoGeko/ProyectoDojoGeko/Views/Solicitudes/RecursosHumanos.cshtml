@model List<ProyectoDojoGeko.Models.SolicitudEncabezadoViewModel>

@{
    ViewData["Title"] = "Listado de Solicitudes";
    Layout = "~/Views/Shared/_DashboardLayoutSistema.cshtml";
    var todosLosEstados = ViewBag.Estados;
    var todasLasSolicitudes = Model.ToList();
    var totalSolicitudes = todasLasSolicitudes.Count;
    var estados = ViewBag.Estados as List<SelectListItem> ?? new List<SelectListItem>();
    var estadoSeleccionado = Context.Request.Query["estadoSolicitud"].ToString();
}

<div class="empresas-container">

    <!--Header-->
    <div class="page-header">
        <div class="header-content">
            <h1 class="page-title">
                <i class="fa-solid fa-clipboard-list"></i>
                Solicitudes de días de disponibilidad <br> RRHH
            </h1>
            <p class="page-subtitle">
                Listado de solicitudes de días de disponibilidad de los empleados.
            </p>
        </div>
        <div class="header-actions">
            <form method="get" asp-action="RecursosHumanos" asp-controller="Solicitudes">
                <div class="input-group">
                    <div style="position: relative;">
                        <i class="fa-solid fa-user-tie" style="position: absolute; left: 16px; top: 50%; transform: translateY(-50%); color: var(--gray-400);"></i>
                        <input id="searchInput" type="text" name="nombresEmpleado" placeholder="Buscar empleado..." class="search-input" value="@Context.Request.Query["nombresEmpleado"]" />
                    <button type="submit" class="btn btn-search">
                        <i class="fas fa-search"></i>
                    </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Estadísticas y filtros -->
    <div class="filters-stats">

        <!-- Estadísticas -->
        <div class="stats-cards">
            <div class="stat-card">
                <div class="status-icon"><i class="fa-solid fa-rectangle-list"></i></div>
                <div class="stat-content">
                    <div class="stat-number">@totalSolicitudes</div>
                    <div class="stat-label">Total Solicitudes</div>
                </div>
            </div>
            <div class="stat-card">
                <div class="status-icon pendiente"><i class="fa-solid fa-stopwatch"></i></div>
                <div class="stat-content">
                    <div class="stat-number" id="empleadosActivos">@Model.Count(e => e.Estado == 2)</div>
                    <div class="stat-label">Estado Autorizada</div>
                </div>
            </div>
            <div class="stat-card">
                <div class="status-icon vigente"><i class="fa-solid fa-check"></i></div>
                <div class="stat-content">
                    <div class="stat-number" id="empleadosActivos">@Model.Count(e => e.Estado == 3)</div>
                    <div class="stat-label">Estado Vigente</div>
                </div>
            </div>
        </div>

        <div class="filters">
            <div class="filter-group">
                <div class="filter-group d-flex justify-content-between align-items-center w-100">
                <form method="get" asp-action="RecursosHumanos" asp-controller="Solicitudes" class="d-flex gap-2 align-items-center">
                    <label for="estadoFilter">Estado:</label>
                        <select id="estadoFilter" name="estadoSolicitud" class="filter-select">
                            <option value="">Todos los estados</option>
                            @foreach (var estado in estados)
                            {
                                if (estado.Value == estadoSeleccionado)
                                {
                                    <option value="@estado.Value" selected="selected">@estado.Text</option>
                                }
                                else
                                {
                                    <option value="@estado.Value">@estado.Text</option>
                                }
                            }
                        </select>

                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-filter"></i>
                    </button>
                </form>

                <button id="resetFilters" class="btn-reset-filters ms-auto">
                    <i class="fas fa-sync-alt"></i>
                    Reiniciar Filtro
                </button>

                <script>
                    // Reiniciar filtros
                    document.getElementById("resetFilters").addEventListener("click", function () {
                        window.location.href = "/Solicitudes/RecursosHumanos";
                    });
                </script>
            </div>
        </div>
    </div>

        <!-- Tabla -->
        <div class="table-container">
            <table class="empresas-table" id="rhTable">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Fecha de la solicitud</th>
                        <th>Nombre del Empleado</th>
                        <th>Cantidad de días</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {

                        foreach (var solicitud in Model)
                        {
                            var nombreEstado = estados.FirstOrDefault(e => e.Value == solicitud.Estado.ToString())?.Text ?? "Desconocido";
                            var estadoBadgeClass = solicitud.Estado switch
                            {
                                1 => "badge-ingresada",      // Ingresada - Azul
                                2 => "badge-autorizada",     // Autorizada - Verde
                                3 => "badge-vigente",        // Vigente - Verde claro
                                4 => "badge-finalizada",     // Finalizada - Gris
                                5 => "badge-cancelada",      // Cancelada - Naranja
                                6 => "badge-rechazada",      // Rechazada - Rojo
                                _ => "badge-default"         // Desconocido
                            };
                            <tr>
                                <td>@solicitud.IdSolicitud</td>
                                <td>@solicitud.FechaIngresoSolicitud</td>
                                <td>@solicitud.NombreEmpleado</td>
                                <td>@solicitud.DiasSolicitadosTotal</td>
                                <td>
                                     <span class="badge @estadoBadgeClass">@nombreEstado</span>
                                </td>
                                <td>
                                    <a href="@Url.Action("DetalleRH", "Solicitudes", new { id = solicitud.IdSolicitud })" class="btn-ver-detalle">
                                        <i class="fas fa-eye"></i> Ver detalle
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" style="text-align: center;">No hay solicitudes </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Paginación -->
    <div class="pagination-container">
        <div class="pagination-info">
            Mostrando <span id="showing-start">1</span> a <span id="showing-end">@Model.Count()</span> de <span id="total-items">@Model.Count()</span> solicitudes
        </div>
        <div class="pagination-controls">
            <button id="prev-page" class="pagination-btn" disabled>
                <i class="fas fa-chevron-left"></i>
                Anterior
            </button>
            <div class="pagination-pages" id="pagination-pages">
                <button class="page-btn active">1</button>
            </div>
            <button id="next-page" class="pagination-btn" disabled>
                Siguiente
                <i class="fas fa-chevron-right"></i>
            </button>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/empresas.css" />
}
<script src="~/js/solicitudes.js"></script>
<style>
    .status-icon {
        width: 40px;
        height: 40px;
        border-radius: var(--border-radius-sm);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.125rem;
        color: var(--white);
        background: linear-gradient(135deg, #87CDDE, #0694D1);
        flex-shrink: 0;
    }

        .status-icon.vigente {
            background: linear-gradient(135deg, #27C24B, #02A327);
        }

        .status-icon.pendiente {
            background: linear-gradient(135deg, #E3B862, #E3842B);
        }

    .page-title i {
        color: #0694D1;
    }

    .filters-stats {
        display: flex;
        flex-direction: column; 
        gap: 1.5rem;
    }

    .stats-cards {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .filters {
        display: flex;
        gap: 1rem;
        align-items: flex-end;
        justify-content: space-between;
        flex-wrap: wrap;
    }

    .reset-button-right {
        margin-left: auto;
        display: flex;
        align-items: flex-end;
    }


    .page-btn.active {
        background: #0694D1;
        color: var(--white);
        border-color: #0694D1;
    }

    .btn-action.ver {
        background: #0694D1;
    }

        .btn-action.ver:hover {
            background: #0694D1;
        }


    .btn-search {
        padding: 12px 15px;
        background: linear-gradient(135deg, #5DBACF, #0694D1)
    }

        .btn-search:hover {
            padding: 12px 15px;
            background: linear-gradient(135deg, #0694D1,#5DBACF)
        }

    /* Badges de estados con colores específicos */
    .badge {
        display: inline-block;
        padding: 6px 12px;
        font-size: 12px;
        font-weight: 600;
        border-radius: 20px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .badge-ingresada {
        background: linear-gradient(135deg, #3B82F6, #2563EB);
        color: white;
    }

    .badge-autorizada {
        background: linear-gradient(135deg, #10B981, #059669);
        color: white;
    }

    .badge-vigente {
        background: linear-gradient(135deg, #22C55E, #16A34A);
        color: white;
    }

    .badge-finalizada {
        background: linear-gradient(135deg, #6B7280, #4B5563);
        color: white;
    }

    .badge-cancelada {
        background: linear-gradient(135deg, #F59E0B, #D97706);
        color: white;
    }

    .badge-rechazada {
        background: linear-gradient(135deg, #EF4444, #DC2626);
        color: white;
    }

    .badge-default {
        background: linear-gradient(135deg, #9CA3AF, #6B7280);
        color: white;
    }

    /* Botón Ver detalle mejorado */
    .btn-ver-detalle {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 8px 16px;
        background: linear-gradient(135deg, #0694D1, #0577a8);
        color: white;
        border: none;
        border-radius: 8px;
        font-size: 13px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
        box-shadow: 0 2px 4px rgba(6, 148, 209, 0.2);
    }

    .btn-ver-detalle:hover {
        background: linear-gradient(135deg, #0577a8, #045a85);
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(6, 148, 209, 0.3);
        color: white;
        text-decoration: none;
    }

    .btn-ver-detalle i {
        font-size: 14px;
    }

    .empresas-table th {
        background: #68C2DE;
        font-weight: 600;
        color: var(--gray-700);
        font-size: 14px;
        white-space: nowrap;
    }

</style>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            initPagination();
        });

        function initPagination() {
            const table = document.getElementById('rhTable');
            if (!table) return;

            const rowsPerPage = 10;
            const rows = Array.from(table.querySelectorAll('tbody tr'));
            const totalRows = rows.length;
            const totalPages = Math.ceil(totalRows / rowsPerPage);

            // Si no hay suficientes filas, ocultar paginación
            if (totalPages <= 1) {
                const paginationContainer = document.querySelector('.pagination-container');
                if (paginationContainer) {
                    paginationContainer.style.display = 'none';
                }
                return;
            }

            let currentPage = 1;

            // Función para mostrar página
            function showPage(pageNumber) {
                currentPage = pageNumber;
                const startIndex = (pageNumber - 1) * rowsPerPage;
                const endIndex = Math.min(startIndex + rowsPerPage, totalRows);

                // Mostrar/ocultar filas
                rows.forEach((row, index) => {
                    row.style.display = (index >= startIndex && index < endIndex) ? '' : 'none';
                });

                // Actualizar info de paginación
                document.getElementById('showing-start').textContent = totalRows > 0 ? startIndex + 1 : 0;
                document.getElementById('showing-end').textContent = endIndex;
                document.getElementById('total-items').textContent = totalRows;

                // Actualizar botones
                document.getElementById('prev-page').disabled = pageNumber === 1;
                document.getElementById('next-page').disabled = pageNumber === totalPages;

                // Actualizar botones de página
                updatePageButtons();
            }

            // Función para crear botones de página
            function updatePageButtons() {
                const paginationPages = document.getElementById('pagination-pages');
                paginationPages.innerHTML = '';

                const maxVisiblePages = 5;
                let startPage = Math.max(1, currentPage - Math.floor(maxVisiblePages / 2));
                let endPage = Math.min(totalPages, startPage + maxVisiblePages - 1);

                if (endPage - startPage < maxVisiblePages - 1) {
                    startPage = Math.max(1, endPage - maxVisiblePages + 1);
                }

                // Botón primera página
                if (startPage > 1) {
                    const firstBtn = createPageButton(1);
                    paginationPages.appendChild(firstBtn);
                    if (startPage > 2) {
                        const dots = document.createElement('span');
                        dots.textContent = '...';
                        dots.style.padding = '0 8px';
                        dots.style.color = 'var(--gray-500)';
                        paginationPages.appendChild(dots);
                    }
                }

                // Botones de páginas
                for (let i = startPage; i <= endPage; i++) {
                    const btn = createPageButton(i);
                    paginationPages.appendChild(btn);
                }

                // Botón última página
                if (endPage < totalPages) {
                    if (endPage < totalPages - 1) {
                        const dots = document.createElement('span');
                        dots.textContent = '...';
                        dots.style.padding = '0 8px';
                        dots.style.color = 'var(--gray-500)';
                        paginationPages.appendChild(dots);
                    }
                    const lastBtn = createPageButton(totalPages);
                    paginationPages.appendChild(lastBtn);
                }
            }

            // Crear botón de página
            function createPageButton(pageNumber) {
                const btn = document.createElement('button');
                btn.className = 'page-btn' + (pageNumber === currentPage ? ' active' : '');
                btn.textContent = pageNumber;
                btn.onclick = () => showPage(pageNumber);
                return btn;
            }

            // Event listeners para botones anterior/siguiente
            document.getElementById('prev-page').addEventListener('click', function() {
                if (currentPage > 1) {
                    showPage(currentPage - 1);
                }
            });

            document.getElementById('next-page').addEventListener('click', function() {
                if (currentPage < totalPages) {
                    showPage(currentPage + 1);
                }
            });

            // Mostrar primera página
            showPage(1);
        }
    </script>
}
