@model List<ProyectoDojoGeko.Models.SolicitudEncabezadoViewModel>

@{
    ViewData["Title"] = "Historial de Solicitudes";
    
    var codigoSistema = Context.Session.GetString("SistemaActual");
    Layout = (codigoSistema != null || codigoSistema != "") ?
        "~/Views/Shared/_DashboardLayoutSistema.cshtml" : 
        "~/Views/Shared/_DashboardLayout.cshtml";

    var todasLasSolicitudes = Model.ToList();
    var totalSolicitudes = todasLasSolicitudes.Count;

    var codigoEmpleado = Context.Session.GetString("CodigoEmpleado") ?? "N/A";
    var nombreEmpleado = Context.Session.GetString("NombreCompletoEmpleado") ?? "N/A";
    var estados = ViewBag.Estados as Dictionary<int, string> ?? new Dictionary<int, string>();
    var estadoSeleccionado = Context.Request.Query["estadoSolicitud"].ToString();
}

<div class="solicitudes-container">

    <!-- Header -->
    <div class="page-header">
        <div class="header-content">
            <h1 class="page-title">
                <i class="fa-solid fa-clock-rotate-left"></i>
                Historial de Solicitudes
            </h1>
            <p class="page-subtitle">
                Historial completo de todas las solicitudes de días de disponibilidad.
            </p>
        </div>
        <div class="header-actions">
            <a href="@Url.Action("Autorizar", "Solicitudes")" class="btn-back">
                <i class="fas fa-arrow-left"></i> Volver a Pendientes
            </a>
        </div>
    </div>

    <!-- Filtros -->
    <div class="filters">
        <div class="filter-group">
            <div class="filter-group d-flex justify-content-between align-items-center w-100 flex-wrap">
                <form method="get" asp-action="HistorialAutorizador" asp-controller="Solicitudes" class="d-flex gap-2 align-items-center flex-wrap">
                    
                    <!-- Filtro por nombre -->
                    <div class="search-container">
                        <i class="fa-solid fa-user-tie"></i>
                        <input type="text" 
                               name="nombresEmpleado" 
                               placeholder="Buscar empleado..." 
                               class="search-input" 
                               value="@Context.Request.Query["nombresEmpleado"]" />
                    </div>

                    <!-- Filtro por estado -->
                    <label for="estadoFilter">Estado:</label>
                    <select id="estadoFilter" name="estadoSolicitud" class="filter-select">
                        <option value="">Todos los estados</option>
                        @foreach (var estado in estados)
                        {
                            if (estado.Key.ToString() == estadoSeleccionado)
                            {
                                <option value="@estado.Key" selected="selected">@estado.Value</option>
                            }
                            else
                            {
                                <option value="@estado.Key">@estado.Value</option>
                            }
                        }
                    </select>

                    <button type="submit" class="btn btn-primary">
                        <i class="fa-solid fa-magnifying-glass"></i> Buscar
                    </button>
                </form>

                <button id="resetFilters" class="btn-reset-filters ms-auto">
                    <i class="fas fa-sync-alt"></i>
                    Reiniciar Filtros
                </button>
            </div>
        </div>
    </div>

    <!-- Estadísticas -->
    <div class="stats-cards">
        <div class="stat-card">
            <div class="status-icon">
                <i class="fa-solid fa-rectangle-list"></i>
            </div>
            <div class="stat-content">
                <div class="stat-number">@totalSolicitudes</div>
                <div class="stat-label">Total Solicitudes</div>
            </div>
        </div>
        <div class="stat-card">
            <div class="status-icon pendiente">
                <i class="fa-solid fa-stopwatch"></i>
            </div>
            <div class="stat-content">
                <div class="stat-number">@Model.Count(e => e.Estado == 1)</div>
                <div class="stat-label">Pendientes</div>
            </div>
        </div>
        <div class="stat-card">
            <div class="status-icon autorizada">
                <i class="fa-solid fa-check-circle"></i>
            </div>
            <div class="stat-content">
                <div class="stat-number">@Model.Count(e => e.Estado == 2)</div>
                <div class="stat-label">Autorizadas</div>
            </div>
        </div>
        <div class="stat-card">
            <div class="status-icon rechazada">
                <i class="fa-solid fa-times-circle"></i>
            </div>
            <div class="stat-content">
                <div class="stat-number">@Model.Count(e => e.Estado == 6)</div>
                <div class="stat-label">Rechazadas</div>
            </div>
        </div>
    </div>

    <!-- Tabla de solicitudes -->
    <div class="table-container">
        <div class="solicitudes-header">
            <h2>
                <i class="fas fa-clipboard-list"></i>
                Todas las Solicitudes
            </h2>
        </div>

        <table class="empresas-table" id="tablaHistorial">
            <thead>
                <tr>
                    <th>N° Solicitud</th>
                    <th>Empleado</th>
                    <th>Días Solicitados</th>
                    <th>Estado</th>
                    <th>Fecha Ingreso</th>
                    <th>Detalle</th>
                </tr>
            </thead>
            <tbody>
                @if (todasLasSolicitudes.Any())
                {
                    foreach (var solicitud in todasLasSolicitudes)
                    {
                        var nombreEstado = estados.ContainsKey(solicitud.Estado) ? estados[solicitud.Estado] : "Desconocido";
                        var estadoBadgeClass = solicitud.Estado switch
                        {
                            1 => "badge-ingresada",      // Ingresada - Azul
                            2 => "badge-autorizada",     // Autorizada - Verde
                            5 => "badge-cancelada",      // Cancelada - Naranja
                            6 => "badge-rechazada",      // Rechazada - Rojo
                            _ => "badge-default"         // Desconocido
                        };
                        <tr>
                            <td>@solicitud.IdSolicitud</td>
                            <td>@solicitud.NombreEmpleado</td>
                            <td>@solicitud.DiasSolicitadosTotal</td>
                            <td>
                                <span class="badge @estadoBadgeClass">@nombreEstado</span>
                            </td>
                            <td>@solicitud.FechaIngresoSolicitud.ToString("dd/MM/yyyy")</td>
                            <td>
                                <a href="@Url.Action("Detalle", "Solicitudes", new { id = solicitud.IdSolicitud })"
                                   class="btn-detail">
                                    <i class="fas fa-eye"></i> Ver detalle
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" style="text-align: center;">
                            No hay solicitudes registradas
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    
    <!-- Paginación -->
    <div class="pagination-container">
        <div class="pagination-info">
            Mostrando <span id="showing-start">1</span> a <span id="showing-end">@Model.Count()</span> de <span id="total-items">@Model.Count()</span> solicitudes
        </div>
        <div class="pagination-controls">
            <button id="prev-page" class="pagination-btn" disabled>
                <i class="fas fa-chevron-left"></i>
                Anterior
            </button>
            <div class="pagination-pages" id="pagination-pages">
                <button class="page-btn active">1</button>
            </div>
            <button id="next-page" class="pagination-btn" disabled>
                Siguiente
                <i class="fas fa-chevron-right"></i>
            </button>
        </div>
    </div>

</div>

