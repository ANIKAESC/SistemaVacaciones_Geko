@using ProyectoDojoGeko.Dtos.Equipos.Responses
@model ProyectoDojoGeko.Models.EquipoViewModel
@{
    ViewData["Title"] = "Detalle del Equipo";
    Layout = "~/Views/Shared/_DashboardLayoutSistema.cshtml";
}
<div class="equipo-detalle-container">

    <!-- Header -->
    <div class="page-header">
        <div>
            <h1 class="page-title">
                <i class="fas fa-file-alt"></i> Detalle del Equipo
            </h1>
            <p class="page-subtitle">Información completa del equipo y empleados asignados</p>
        </div>
        <div class="header-actions">
            <a href="@Url.Action("DetalleEquipo", "ProyectoEquipo", new { id = Model.IdEquipo })" class="btn-back">
                <i class="fas fa-arrow-left"></i>
                <span>Volver</span>
            </a>
        </div>
    </div>

    <!-- Tarjeta principal -->
    <div class="proyecto-card">

        <!-- Información General -->
        <div class="section-header">
            <h3>
                <i class="fas fa-info-circle"></i>
                Información General
            </h3>
        </div>

        <div class="info-grid">
            <form asp-action="EditarEquipo" asp-controller="ProyectoEquipo" method="post">

                <input type="hidden" asp-for="IdEquipo" />

                <div class="info-item">
                    <div class="info-label">Nombre</div>
                    <input asp-for="Nombre" class="form-control" required />
                </div>
                <div class="info-item">
                    <div class="info-label">ID del Equipo</div>
                    <div class="info-value">@Model.IdEquipo</div>
                </div>
                <div class="info-item">
                    <div class="info-label">Descripción</div>
                    <textarea asp-for="Descripcion" class="form-control" placeholder="Agrega una descripción para el equipo"></textarea>
                </div>

                <div class="proyecto-footer">
                    <a href="javascript:void(0);" class="btn-back" id="btnCancelar">
                        <i class="fas fa-times me-1"></i> Cancelar
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i> Guardar Cambios
                    </button>
                </div>
            </form>
        </div>        
    </div>

    <div class="proyecto-card">
        <!-- Sección de empleados asignados -->
        <div class="equipo-content">
            <div class="info-section">
                <div class="section-header d-flex justify-content-between align-items-center mb-3">
                    <h3 class="mb-0">
                        <i class="fas fa-user-friends me-2"></i>
                        Empleados del Equipo
                    </h3>
                    <button id="btnAbrirModalEmpleado" class="btn btn-primary btn-sm">
                        <i class="fas fa-plus me-1"></i>Agregar Empleados
                    </button>
                </div>

                @if (ViewBag.Empleados != null && ((List<EmpleadosEquipoResponse>)ViewBag.Empleados).Count > 0)
                {
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Nombre Completo</th>
                                    <th>Roles</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var empleado in (List<EmpleadosEquipoResponse>)ViewBag.Empleados)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="avatar-sm me-3">
                                                    <div class="avatar-title bg-soft-primary text-primary rounded-circle">
                                                        @empleado.NombresEmpleado.Substring(0, 1)@empleado.ApellidosEmpleado.Substring(0, 1)
                                                    </div>
                                                </div>
                                                <div>
                                                    <h6 class="mb-0">@empleado.NombresEmpleado @empleado.ApellidosEmpleado</h6>
                                                </div>
                                            </div>
                                        </td>
                                        <td>@empleado.Rol</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5 border rounded">
                        <div class="mb-3">
                            <i class="fas fa-users fa-3x text-muted"></i>
                        </div>
                        <h5 class="text-muted mb-3">No hay empleados asignados</h5>
                        <p class="text-muted mb-4">Agrega empleados al equipo para comenzar</p>

                    </div>
                }
            </div>
        </div>
    </div>

</div>

<!-- Modal para asignar empleados -->
<div class="modal fade" id="modalAsignarEmpleados" tabindex="-1" aria-labelledby="modalAsignarEmpleadosLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content shadow-lg">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="modalAsignarEmpleadosLabel">
                    <i class="fas fa-user-plus me-2"></i> Asignar Empleados al Equipo
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <form asp-action="AsignarMiembro" asp-controller="ProyectoEquipo" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="IdEquipo" name="idEquipo" value="@Model.IdEquipo" />

                <div class="modal-body">

                    <div class="mb-3">
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="fas fa-search"></i>
                            </span>
                            <input type="text" id="buscadorEmpleados" class="form-control" placeholder="Buscar empleado...">
                        </div>
                    </div>

                    @if (ViewBag.EmpleadosNoAsignados != null && ((List<EmpleadoViewModel>)ViewBag.EmpleadosNoAsignados).Count > 0)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle" id="tablaEmpleados">
                                <thead class="table-light">
                                    <tr>
                                        <th>Id</th>
                                        <th></th>
                                        <th>Nombre Completo</th>
                                        <th>Puesto</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var empleado in (List<EmpleadoViewModel>)ViewBag.EmpleadosNoAsignados)
                                    {
                                        <tr>
                                            <td>@empleado.IdEmpleado</td>
                                            <td>
                                                <input type="checkbox" name="empleadosSeleccionados" value="@empleado.IdEmpleado" class="form-check-input" />
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-sm me-3">
                                                        <div class="avatar-title bg-soft-primary text-primary rounded-circle">
                                                            @empleado.NombresEmpleado.Substring(0, 1)@empleado.ApellidosEmpleado.Substring(0, 1)
                                                        </div>
                                                    </div>
                                                    <div>
                                                        <h6 class="mb-0">@empleado.NombresEmpleado @empleado.ApellidosEmpleado</h6>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>@empleado.Puesto</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info text-center">
                            <i class="fas fa-info-circle me-2"></i> No hay empleados disponibles para asignar.
                        </div>
                    }
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-1"></i> Cancelar
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-check me-1"></i> Asignar Seleccionados
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/empleado-detalle.css" />
}

<style>
    /* Header */
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background: #f8fafc;
        border-bottom: 1px solid #e5e7eb;
        padding: 16px 30px;
        border-radius: 10px;
        margin: 20px 30px;
    }

    .page-title {
        font-size: 1.5rem;
        font-weight: 600;
        color: #1f2937;
        margin: 0;
    }

    .page-subtitle {
        font-size: 0.9rem;
        color: #6b7280;
        margin-top: 4px;
    }

    .header-actions a {
        margin-left: 10px;
        padding: 8px 14px;
        border-radius: 8px;
        font-size: 0.9rem;
        font-weight: 500;
        text-decoration: none;
        transition: background 0.2s;
    }

    .btn-back {
        background: #e5e7eb;
        color: #374151;
    }

    .btn-edit {
        background: #2563eb;
        color: white;
    }

    .btn-back:hover {
        background: #d1d5db;
    }

    .btn-edit:hover {
        background: #1d4ed8;
    }

    /* Card principal */
    .proyecto-card {
        background: white;
        margin: 20px 30px;
        padding: 24px;
        box-shadow: 0 4px 12px rgba(0,0,0,.05);
        border-radius: 12px;
    }

    .info-section {
        margin-bottom: 24px;
    }

    .section-header h3 {
        font-size: 1.1rem;
        font-weight: 600;
        color: #374151;
        display: flex;
        align-items: center;
        gap: 8px;
        margin-bottom: 12px;
    }

    /* Grid de info */
    .info-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 16px;
    }

    .info-item {
        background: #f9fafb;
        padding: 12px 16px;
        border-radius: 8px;
    }

    .info-label {
        font-size: 0.85rem;
        font-weight: 500;
        color: #6b7280;
    }

    .info-value {
        font-size: 1rem;
        font-weight: 600;
        color: #111827;
        margin-top: 4px;
    }

    /* Lista de empleados */
    .empleado-item {
        display: flex;
        align-items: center;
        background: #f9fafb;
        padding: 12px 16px;
        border-radius: 10px;
        margin-bottom: 10px;
        transition: transform 0.2s, background 0.2s;
    }

        .empleado-item:hover {
            transform: translateY(-2px);
            background: #f3f4f6;
        }

    .empleado-icon {
        width: 40px;
        height: 40px;
        background: #2563eb;
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        margin-right: 12px;
    }

    .empleado-info h4 {
        margin: 0;
        font-size: 1rem;
        color: #111827;
        font-weight: 600;
    }

    .empleado-info p {
        margin: 0;
        font-size: 0.85rem;
        color: #6b7280;
    }

    /* Estado vacío */
    .empty-state {
        text-align: center;
        padding: 20px;
        color: #6b7280;
        background: #f3f4f6;
        border-radius: 8px;
    }

    .empty-state i {
        font-size: 1.5rem;
        margin-bottom: 8px;
        color: #9ca3af;
    }


</style>

@section Scripts {
    <!-- Bootstrap Bundle (incluye Popper.js, necesario para modales) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- SweetAlert -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Capturar los valores originales del formulario
            const form = document.querySelector('form');
            const nombreOriginal = document.querySelector('#Nombre').value;
            const descripcionOriginal = document.querySelector('#Descripcion').value;

            // Configurar el botón de cancelar
            const btnCancelar = document.getElementById("btnCancelar");
            if (btnCancelar) {
                btnCancelar.addEventListener('click', function(e) {
                    e.preventDefault(); // Prevenir el comportamiento por defecto del enlace

                    // Restaurar valores originales
                    document.querySelector('#Nombre').value = nombreOriginal;
                    document.querySelector('#Descripcion').value = descripcionOriginal;

                    // Opcional: Mostrar un mensaje de confirmación
                    Swal.fire({
                        icon: 'info',
                        title: 'Cambios descartados',
                        text: 'Los cambios no guardados se han descartado',
                        timer: 1500,
                        showConfirmButton: false
                    });
                });
            }

            // Código existente para el modal
            const btnAbrirModal = document.querySelector("#btnAbrirModalEmpleado");
            if (btnAbrirModal) {
                btnAbrirModal.addEventListener("click", function () {
                    const modal = new bootstrap.Modal(document.getElementById("modalAsignarEmpleados"));
                    modal.show();
                });
            }

            // Funcionalidad de búsqueda en la tabla de empleados
            const buscador = document.getElementById('buscadorEmpleados');
            const tabla = document.getElementById('tablaEmpleados');
            if (buscador && tabla) {
                buscador.addEventListener('input', function(e) {
                    const textoBusqueda = e.target.value.toLowerCase();
                    const filas = tabla.querySelectorAll('tbody tr');

                    filas.forEach(fila => {
                        const textoFila = fila.textContent.toLowerCase();
                        fila.style.display = textoFila.includes(textoBusqueda) ? '' : 'none';
                    });
                });
            }
        });
    </script>
}

