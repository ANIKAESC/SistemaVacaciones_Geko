@model ProyectoDojoGeko.Models.ProyectoViewModel
@{
    ViewData["Title"] = "Detalle del HUB - GEKO Sistemas";
    Layout = "~/Views/Shared/_DashboardLayoutSistema.cshtml";

    var rolesString = Context.Session.GetString("Roles") ?? "";
    var userRoles = rolesString.Split(',').Where(r => !string.IsNullOrEmpty(r)).ToList();

    bool puedeEditar = userRoles.Any(r => new[] { "SuperAdministrador", "Administrador", "Editor" }.Contains(r));
}

<div class="proyecto-detalle-container">
    <!-- Header -->
    <div class="page-header">
        <div class="header-content">
            <h1 class="page-title">
                <i class="fas fa-file-alt"></i>
                Detalle del HUB
            </h1>
            <p class="page-subtitle">Informaci贸n completa del HUB</p>
        </div>
        <div class="header-actions">
            <a href="@Url.Action("Index", "ProyectoEquipo")" class="btn-back">
                <i class="fas fa-arrow-left"></i> Volver
            </a>
            @if (puedeEditar)
            {
                <a href="@Url.Action("EditarHUB", "ProyectoEquipo", new { id = Model.IdProyecto })" class="btn-edit">
                    <i class="fas fa-edit"></i> Editar
                </a>
            }
        </div>
    </div>

    <!-- Tarjeta principal -->
    <div class="proyecto-card">
        <div class="proyecto-header">
            <div class="proyecto-icon">
                <i class="fas fa-project-diagram"></i>
            </div>
            <div class="proyecto-info">
                <h2>@Model.Nombre</h2>
                <div class="proyecto-meta">
                    <span class="badge estado @(Model.FK_IdEstado == 1 ? "activo" : "inactivo")">
                        @(Model.FK_IdEstado == 1 ? "Activo" : "Inactivo")
                    </span>
                    <span class="fecha">Creado el @DateTime.Now.ToString("dd/MM/yyyy")</span>
                </div>
            </div>
        </div>

        <!-- Contenido -->
        <div class="proyecto-content">
            <div class="info-section">
                <div class="section-header">
                    <h3><i class="fas fa-info-circle"></i> Informaci贸n General</h3>
                </div>
                <div class="info-grid">
                    <div class="info-item">
                        <div class="info-label"><i class="fas fa-calendar-alt"></i> Fecha Inicio</div>
                        <div class="info-value">@Model.FechaInicio</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label"><i class="fas fa-align-left"></i> Descripci贸n</div>
                        <div class="info-value">
                            @(string.IsNullOrEmpty(Model.Descripcion) ? "No especificada" : Model.Descripcion)
                        </div>
                    </div>
                </div>
            </div>

            <!-- Equipos asignados -->
            <div class="info-section">
                <div class="section-header">
                    <h3><i class="fas fa-users"></i> Equipos Asignados</h3>
                </div>
                <div class="equipos-list">
                    @if (ViewBag.Equipos != null && ((List<EquipoViewModel>)ViewBag.Equipos).Count > 0)
                    {
                        foreach (var equipo in ViewBag.Equipos)
                        {
                            <div class="equipo-item">
                                <div class="equipo-icon"><i class="fas fa-users"></i></div>
                                <div class="equipo-info">
                                    <h4>@equipo.Nombre</h4>
                                    <p>@(equipo.Descripcion ?? "Sin descripci贸n")</p>
                                </div>
                                <div class="equipo-actions">
                                    <a href="@Url.Action("DetalleEquipo", "ProyectoEquipo", new { id = equipo.IdEquipo })" class="btn-action btn-view">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="empty-state">
                            <i class="fas fa-info-circle"></i>
                            <p>No hay equipos asignados a este HUB</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- HUB Footer -->
        <div class="proyecto-footer">
            <a href="@Url.Action("Index", "ProyectoEquipo")" class="btn-secondary">
                <i class="fas fa-list"></i> Ver todos los HUBS
            </a>
            @if (puedeEditar)
            {
                <a href="@Url.Action("CrearEquipo", "ProyectoEquipo", new { id = Model.IdProyecto })" class="btn-primary">
                    <i class="fas fa-users"></i> Asignar Equipo
                </a>
            }
        </div>
    </div>
</div>

<style>
    /* ====== ESTILOS GENERALES ====== */
    .page-header {
        margin: 20px 30px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .page-title {
        font-size: 24px;
        font-weight: 600;
        color: #1f2937;
    }

    .page-subtitle {
        font-size: 14px;
        color: #6b7280;
    }

    .header-actions a {
        margin-left: 10px;
        padding: 8px 14px;
        border-radius: 8px;
        font-size: 14px;
        text-decoration: none;
        transition: all 0.2s ease-in-out;
    }

    .btn-back {
        background: #f3f4f6;
        color: #374151;
    }

    .btn-edit {
        background: #2563eb;
        color: #fff;
    }

    .btn-back:hover {
        background: #e5e7eb;
    }

    .btn-edit:hover {
        background: #1d4ed8;
    }

    /* ====== TARJETA ====== */
    .proyecto-card {
        margin: 30px;
        padding: 25px;
        background: #fff;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
        border-radius: 12px;
    }

    .proyecto-header {
        display: flex;
        align-items: center;
        border-bottom: 1px solid #e5e7eb;
        padding-bottom: 15px;
        margin-bottom: 20px;
    }

    .proyecto-icon {
        font-size: 32px;
        color: #2563eb;
        margin-right: 15px;
    }

    .proyecto-meta {
        display: flex;
        gap: 15px;
        margin-top: 5px;
    }

    .badge {
        padding: 5px 10px;
        border-radius: 8px;
        font-size: 12px;
        font-weight: 600;
    }

        .badge.activo {
            background: #d1fae5;
            color: #065f46;
        }

        .badge.inactivo {
            background: #fee2e2;
            color: #991b1b;
        }

    .fecha {
        color: #6b7280;
        font-size: 12px;
    }

    /* ====== INFO SECTIONS ====== */
    .info-section {
        margin-bottom: 25px;
    }

    .section-header h3 {
        font-size: 18px;
        font-weight: 600;
        color: #1f2937;
        margin-bottom: 10px;
    }

    .info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
        gap: 20px;
    }

    .info-item {
        background: #f9fafb;
        padding: 12px;
        border-radius: 8px;
    }

    .info-label {
        font-size: 13px;
        color: #6b7280;
        margin-bottom: 4px;
    }

    .info-value {
        font-size: 14px;
        font-weight: 500;
        color: #111827;
    }

    /* ====== EQUIPOS ====== */
    .equipos-list {
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .equipo-item {
        display: flex;
        align-items: center;
        justify-content: space-between;
        background: #f3f4f6;
        padding: 12px;
        border-radius: 10px;
        transition: 0.2s;
    }

        .equipo-item:hover {
            background: #e5e7eb;
        }

    .equipo-info h4 {
        font-size: 15px;
        font-weight: 600;
        margin-bottom: 3px;
    }

    .equipo-info p {
        font-size: 13px;
        color: #6b7280;
    }

    .btn-action {
        padding: 6px 10px;
        border-radius: 6px;
        text-decoration: none;
    }

    .btn-view {
        background: #2563eb;
        color: #fff;
    }

    /* ====== EMPTY STATE ====== */
    .empty-state {
        text-align: center;
        color: #6b7280;
        padding: 20px;
    }

    /* ====== FOOTER ====== */
    .proyecto-footer {
        display: flex;
        justify-content: flex-end;
        gap: 10px;
        margin-top: 20px;
        padding-top: 15px;
        border-top: 1px solid #e5e7eb;
    }

    .btn-secondary, .btn-primary {
        padding: 10px 18px;
        border-radius: 8px;
        text-decoration: none;
        font-size: 14px;
        transition: 0.2s;
    }

    .btn-secondary {
        background: #f3f4f6;
        color: #374151;
    }

    .btn-primary {
        background: #16a34a;
        color: #fff;
    }

    .btn-secondary:hover {
        background: #e5e7eb;
    }

    .btn-primary:hover {
        background: #15803d;
    }
</style>
