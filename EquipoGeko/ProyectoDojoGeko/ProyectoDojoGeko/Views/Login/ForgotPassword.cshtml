@{
    ViewData["Title"] = "Recuperar contraseña";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/login-styles.css">
</head>
<body class="login-page">
    <section class="vh-100">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-xl-10">
                    <div class="card shadow login-card">
                        <div class="row g-0">
                            <div class="col-md-6 col-lg-5 d-none d-md-block">
                                <img src="~/imagenes/FondoLogin2.png" alt="login form" class="img-fluid login-image" />
                            </div>
                            <div class="col-md-6 col-lg-7 d-flex align-items-center">
                                <div class="card-body p-4 p-lg-5 text-black">

                                    @if (TempData["ForgotPasswordMessage"] != null)
                                    {
                                        var messageType = TempData["ForgotPasswordMessageType"]?.ToString() ?? "info";
                                        var iconClass = messageType switch
                                        {
                                            "success" => "bi-check-circle-fill",
                                            "danger" => "bi-exclamation-triangle-fill",
                                            "warning" => "bi-exclamation-circle-fill",
                                            _ => "bi-info-circle-fill"
                                        };
                                        <div class="alert alert-@messageType alert-dismissible fade show" role="alert">
                                            <i class="bi @iconClass me-2"></i>
                                            @TempData["ForgotPasswordMessage"]
                                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                        </div>
                                    }

                                    <div class="text-center mb-4">
                                        <h2 class="fw-bold mb-0">Recuperar contraseña</h2>
                                        <p class="text-muted">Ingresa tu correo empresarial para recibir un enlace</p>
                                    </div>

                                    <form method="post" asp-controller="Login" asp-action="ForgotPassword" novalidate>
                                        @Html.AntiForgeryToken()

                                        <div class="form-outline mb-4">
                                            <label class="form-label" for="email"><i class="bi bi-envelope-fill"></i> Correo empresarial</label>
                                            <input type="email" id="email" name="email" class="form-control form-control-lg"
                                                   placeholder="nombre@empresa.com" required />
                                            <div class="invalid-feedback">Ingresa tu correo empresarial.</div>
                                        </div>

                                        <div class="pt-1 mb-3 text-center">
                                            <button class="btn-login btn-lg w-100" type="submit">
                                                Enviar enlace
                                            </button>
                                        </div>

                                        <div class="text-center">
                                            <a class="small text-muted" asp-controller="Login" asp-action="Index">Volver al login</a>
                                        </div>
                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/login-validation.js"></script>
</body>
</html>
