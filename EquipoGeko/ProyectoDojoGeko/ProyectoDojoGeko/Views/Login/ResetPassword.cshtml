@{
    ViewData["Title"] = "Restablecer contraseña";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/login-styles.css">
</head>
<body class="login-page">
    <section class="vh-100">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-xl-10">
                    <div class="card shadow login-card">
                        <div class="row g-0">
                            <div class="col-md-6 col-lg-5 d-none d-md-block">
                                <img src="~/imagenes/FondoLogin2.png" alt="login form" class="img-fluid login-image" />
                            </div>
                            <div class="col-md-6 col-lg-7 d-flex align-items-center">
                                <div class="card-body p-4 p-lg-5 text-black">

                                    @if (!string.IsNullOrEmpty(ViewBag.Mensaje))
                                    {
                                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                            @ViewBag.Mensaje
                                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                        </div>
                                    }

                                    <div class="text-center mb-4">
                                        <h2 class="fw-bold mb-0">Restablecer contraseña</h2>
                                        <p class="text-muted">Ingresa tu nueva contraseña</p>
                                    </div>

                                    <form method="post" asp-controller="Login" asp-action="ResetPassword" novalidate>
                                        @Html.AntiForgeryToken()

                                        <input type="hidden" name="token" value="@ViewBag.Token" />

                                        <div class="form-outline mb-4">
                                            <label class="form-label" for="nuevaContraseña"><i class="bi bi-lock-fill"></i> Nueva contraseña</label>
                                            <div class="password-input-container">
                                                <input type="password" id="nuevaContraseña" name="nuevaContraseña" class="form-control form-control-lg" required minlength="8" />
                                                <button type="button" class="password-toggle" id="toggleNuevaPassword">
                                                    <i class="bi bi-eye"></i>
                                                </button>
                                            </div>
                                            <div class="invalid-feedback">La contraseña debe tener al menos 8 caracteres</div>
                                        </div>

                                        <div class="form-outline mb-4">
                                            <label class="form-label" for="confirmarContraseña"><i class="bi bi-lock-fill"></i> Confirmar contraseña</label>
                                            <div class="password-input-container">
                                                <input type="password" id="confirmarContraseña" name="confirmarContraseña" class="form-control form-control-lg" required minlength="8" />
                                                <button type="button" class="password-toggle" id="toggleConfirmarPassword">
                                                    <i class="bi bi-eye"></i>
                                                </button>
                                            </div>
                                            <div class="invalid-feedback">Confirma la contraseña</div>
                                        </div>

                                        <div class="pt-1 mb-3 text-center">
                                            <button class="btn-login btn-lg w-100" type="submit">Guardar nueva contraseña</button>
                                        </div>

                                        <div class="text-center">
                                            <a class="small text-muted" asp-controller="Login" asp-action="Index">Volver al login</a>
                                        </div>
                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/login-validation.js"></script>
    <script>
        // Script específico para ResetPassword - Toggle de contraseñas
        document.addEventListener('DOMContentLoaded', function() {
            // Toggle para nueva contraseña
            const toggleNuevaPassword = document.getElementById('toggleNuevaPassword');
            const nuevaPassword = document.getElementById('nuevaContraseña');
            
            if (toggleNuevaPassword && nuevaPassword) {
                toggleNuevaPassword.addEventListener('click', function (e) {
                    e.preventDefault();
                    const type = nuevaPassword.getAttribute('type') === 'password' ? 'text' : 'password';
                    nuevaPassword.setAttribute('type', type);
                    
                    const icon = this.querySelector('i');
                    if (type === 'password') {
                        icon.classList.remove('bi-eye-slash');
                        icon.classList.add('bi-eye');
                    } else {
                        icon.classList.remove('bi-eye');
                        icon.classList.add('bi-eye-slash');
                    }
                });
            }

            // Toggle para confirmar contraseña
            const toggleConfirmarPassword = document.getElementById('toggleConfirmarPassword');
            const confirmarPassword = document.getElementById('confirmarContraseña');
            
            if (toggleConfirmarPassword && confirmarPassword) {
                toggleConfirmarPassword.addEventListener('click', function (e) {
                    e.preventDefault();
                    const type = confirmarPassword.getAttribute('type') === 'password' ? 'text' : 'password';
                    confirmarPassword.setAttribute('type', type);
                    
                    const icon = this.querySelector('i');
                    if (type === 'password') {
                        icon.classList.remove('bi-eye-slash');
                        icon.classList.add('bi-eye');
                    } else {
                        icon.classList.remove('bi-eye');
                        icon.classList.add('bi-eye-slash');
                    }
                });
            }
        });
    </script>
</body>
</html>
